<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".badMain"
    android:background="@drawable/bad_bg">

    <TextView
        android:id="@+id/bad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_light"
        android:text="BADMINTON"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bad_team_a_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="141dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Team A"
        android:textSize="24sp"
        android:textColor="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bad_title" />

    <TextView
        android:id="@+id/bad_team_b_title"
        android:textColor="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="141dp"
        android:layout_marginRight="49dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Team B"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bad_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bad_team_a"
        android:hint="Team A"
        android:layout_marginTop="113dp"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/bad_team_a_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="194dp"
        android:fontFamily="@font/roboto_black"
        android:text="V"
        android:textColor="@color/b_pink"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bad_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:layout_marginRight="50dp"
        android:id="@+id/bad_team_b"
        android:hint="Team B"
        app:layout_constraintTop_toBottomOf="@+id/bad_team_b_title"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bad_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:text="No. of set:  "
        android:fontFamily="@font/roboto_medium"
        android:id="@+id/bad_s"
        android:textSize="24sp"
        />

    <EditText
        android:layout_width="72dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toTopOf="@+id/bad_btn"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/bad_s"
        android:text="3"
        android:textSize="24dp"
        android:fontFamily="@font/roboto_medium"
        android:background="@drawable/pink_in"
        android:id="@+id/bad_sets"
        />


    <Button
        android:layout_width="366dp"
        android:layout_height="66dp"
        android:id="@+id/bad_btn"
        android:text="START MATCH"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/pink_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>