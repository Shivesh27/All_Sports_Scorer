<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".badWinner"
    android:background="@drawable/bad_win">
    <TextView
        android:id="@+id/bad_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="206dp"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="CONGRATULATIONS"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/primary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:textSize="72dp"
        android:id="@+id/bad_winner"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/b_pink"
        app:layout_constraintTop_toBottomOf="@+id/bad_congrats"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Won the Match"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@+id/bad_winner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="33sp"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/primary"
        />

    <Button
        android:layout_width="366dp"
        android:layout_height="66dp"
        android:id="@+id/bad_back"
        android:text="Back to Main menu"
        android:fontFamily="@font/roboto_medium"
        android:textSize="26sp"
        android:layout_marginBottom="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/pink_btn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>