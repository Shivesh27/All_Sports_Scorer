<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".badScoring"
    android:background="@drawable/bad_bg">

    <TextView
        android:id="@+id/bad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_light"
        android:text="BADMINTON"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/primary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player A"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/bad_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="47dp"
        android:textColor="@color/primary"
        android:id="@+id/bad_team_a"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player B"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/bad_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="67dp"
        android:layout_marginRight="47dp"
        android:textColor="@color/primary"
        android:id="@+id/bad_team_b"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETS"
        app:layout_constraintTop_toBottomOf="@+id/bad_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/roboto_medium"
        android:textSize="36sp"
        android:textColor="@color/primary"
        android:layout_marginTop="106sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bad_title"
        android:layout_marginTop="159sp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/b_pink"
        android:textSize="64sp"
        android:id="@+id/bad_v"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bad_v"
        android:text="POINTS"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24sp"
        android:textColor="@color/primary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/bad_team_a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="110sp"
        android:textColor="@color/primary"
        android:layout_marginLeft="50sp"
        android:id="@+id/bad_sets_a"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/bad_team_b"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="110sp"
        android:layout_marginRight="50sp"
        android:textColor="@color/primary"
        android:id="@+id/bad_sets_b"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bad_sets_a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="70sp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="72sp"
        android:textColor="@color/primary"
        android:id="@+id/bad_score_a"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bad_sets_b"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="72sp"
        android:textColor="@color/primary"
        android:id="@+id/bad_score_b"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bad_score_a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/pink_add"
        android:id="@+id/bad_add_a"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bad_score_b"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/pink_add"
        android:id="@+id/bad_add_b"
        />

    <Button
        android:layout_width="366dp"
        android:layout_height="66dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:background="@drawable/whitebtn"
        android:text="END GAME"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24sp"
        android:textColor="@color/b_pink"
        android:id="@+id/bad_end"
        />

</androidx.constraintlayout.widget.ConstraintLayout>