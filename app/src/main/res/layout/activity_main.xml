<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="322sp"
        android:layout_height="353sp"
        android:layout_marginLeft="44sp"
        android:layout_marginTop="156sp"
        android:fontFamily="@font/roboto_bold"
        android:text="ALL SPORTS SCORER"
        android:textColor="@color/primary"
        android:textSize="64sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_contiue"
        android:layout_width="125sp"
        android:layout_height="51sp"
        android:layout_marginStart="223sp"
        android:layout_marginLeft="223sp"
        android:layout_marginTop="69sp"
        android:background="@drawable/continute_btn"
        android:text="Continue"
        android:textSize="16sp"
        android:textColor="@color/primary"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title" />

</androidx.constraintlayout.widget.ConstraintLayout>