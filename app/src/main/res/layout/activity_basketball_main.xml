<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasketballMain"
    android:background="@drawable/bb_bg">
    <TextView
        android:id="@+id/basketball_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="BASKETBALL"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="48sp"
        android:textColor="@color/primary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basketball_team_a_title"
        android:layout_marginTop="136dp"
        android:layout_marginLeft="49dp"
        android:textSize="24dp"
        android:text="Team A"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basketball_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basketball_team_b_title"
        android:layout_marginRight="49dp"
        android:layout_marginTop="136dp"
        android:text="Team B"
        android:textSize="24dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/primary"
        app:layout_constraintTop_toBottomOf="@+id/basketball_title"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basketball_team_a"
        android:hint="Team A"
        android:layout_marginTop="113dp"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/basketball_team_a_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="189dp"
        app:layout_constraintTop_toBottomOf="@+id/basketball_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="V"
        android:fontFamily="@font/roboto_black"
        android:textSize="64dp"
        android:textColor="@color/b_yellow"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:layout_marginRight="50dp"
        android:id="@+id/basketball_team_b"
        android:hint="Team B"
        app:layout_constraintTop_toBottomOf="@+id/basketball_team_b_title"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        />



    <Button
        android:layout_width="366dp"
        android:layout_height="66dp"
        android:layout_marginBottom="38dp"
        android:id="@+id/basketball_btn"
        android:background="@drawable/yellow_btn"
        android:text="Start Match"
        android:fontFamily="@font/roboto_medium"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>